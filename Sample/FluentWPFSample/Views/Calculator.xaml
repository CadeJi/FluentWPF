<fw:AcrylicWindow x:Class="FluentWPFSample.Views.Calculator"
                  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                  xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                  xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                  xmlns:local="clr-namespace:FluentWPFSample.Views"
                  xmlns:fw="clr-namespace:SourceChord.FluentWPF;assembly=FluentWPF"
                  mc:Ignorable="d"
                  Title="Calculator"
                  Height="320" Width="480">
    <Window.Resources>
        <Style x:Key="FunctionButtonStyle" TargetType="{x:Type Button}" BasedOn="{StaticResource ButtonRevealStyle}">            <Setter Property="FontWeight" Value="Bold" />            <Setter Property="FontSize" Value="12" />            <Setter Property="Background" Value="Transparent" />            <Setter Property="BorderThickness" Value="1" />        </Style>
        <Style x:Key="NumericButtonStyle" TargetType="{x:Type Button}" BasedOn="{StaticResource ButtonRevealStyle}">            <Setter Property="FontWeight" Value="Bold" />            <Setter Property="FontSize" Value="24" />            <Setter Property="BorderThickness" Value="1" />        </Style>
        <Style x:Key="OpButtonStyle" TargetType="{x:Type Button}" BasedOn="{StaticResource ButtonAccentRevealStyle}">            <Setter Property="FontSize" Value="24" />            <Setter Property="Background" Value="#30808080" />            <Setter Property="BorderThickness" Value="1" />        </Style>
    </Window.Resources>
    <Grid fw:PointerTracker.Enabled="True" Background="#01FFFFFF" >        <Grid.RowDefinitions>            <RowDefinition Height="Auto"/>            <RowDefinition />        </Grid.RowDefinitions>        <UniformGrid Rows="1" Columns="5">            <Button Content="MC" Margin="2" Height="24" Style="{StaticResource FunctionButtonStyle}" />            <Button Content="MR" Margin="2" Height="24" Style="{StaticResource FunctionButtonStyle}" />            <Button Content="M+" Margin="2" Height="24" Style="{StaticResource FunctionButtonStyle}" />            <Button Content="M-" Margin="2" Height="24" Style="{StaticResource FunctionButtonStyle}" />            <Button Content="MS" Margin="2" Height="24" Style="{StaticResource FunctionButtonStyle}" />        </UniformGrid>        <UniformGrid Grid.Row="1" Columns="4" Rows="4">            <Button Content="7" Margin="2" Style="{StaticResource NumericButtonStyle}" />            <Button Content="8" Margin="2" Style="{StaticResource NumericButtonStyle}" />            <Button Content="9" Margin="2" Style="{StaticResource NumericButtonStyle}" />            <Button Content="×" Margin="2" Style="{StaticResource OpButtonStyle}" />            <Button Content="4" Margin="2" Style="{StaticResource NumericButtonStyle}" />            <Button Content="5" Margin="2" Style="{StaticResource NumericButtonStyle}" />            <Button Content="6" Margin="2" Style="{StaticResource NumericButtonStyle}" />            <Button Content="-" Margin="2" Style="{StaticResource OpButtonStyle}" />            <Button Content="2" Margin="2" Style="{StaticResource NumericButtonStyle}" />            <Button Content="3" Margin="2" Style="{StaticResource NumericButtonStyle}" />            <Button Content="4" Margin="2" Style="{StaticResource NumericButtonStyle}" />            <Button Content="+" Margin="2" Style="{StaticResource OpButtonStyle}"/>            <Button Content="±" Margin="2" Style="{StaticResource NumericButtonStyle}" Background="#30808080" FontWeight="Normal"/>            <Button Content="0" Margin="2" Style="{StaticResource NumericButtonStyle}"/>            <Button Content="." Margin="2" Style="{StaticResource NumericButtonStyle}" Background="#30808080" FontWeight="Normal"/>            <Button Content="=" Margin="2" Style="{StaticResource OpButtonStyle}"/>        </UniformGrid>    </Grid>
</fw:AcrylicWindow>
